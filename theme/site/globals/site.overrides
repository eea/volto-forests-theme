  border-top-right-radius: 4px;

  .image-gallery-thumbnails-wrapper {
    position: absolute !important;
    z-index: 1;
    top: 0;
    right: 0;
    // right: -50px;
    bottom: 0;
    width: 223px;

    .image-gallery-thumbnails {
      height: 100%;
      padding: 0;

      .image-gallery-thumbnails-container {
        display: flex;
        height: 100%;
        flex-direction: column;
        background: #000000ad;
