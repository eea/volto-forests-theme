        .image-gallery-thumbnail {
          width: auto;
          width: 190px;
          height: calc(25% - 3rem);
          margin: 1.5rem 1rem;
          color: white;
          transition: all 200ms;

          &:first-of-type {
            margin-top: 1rem;
          }

          &:last-of-type {
            margin-bottom: 1rem;
          }

          &.active {
            .thumbnail-img {
              transform: scale(1.05);
            }

            // transform: scale(1.1);
            // opacity  : 1;
            // .thumbnail-img {
            // }
          }

          .slider-thumbnail {
            position: relative;
            width: 100%;
            height: 100%;
            border: 1px solid black;
            border-radius: 4px;

            .thumbnail-img {
              height: 100%;
              background-size: cover;
              border-radius: 4px;
              box-shadow: 1px 3px 4px #000000bf;
              transition: transform 300ms;
            }

            .slide-title {
              position: absolute;
              top: 100%;
              width: 100%;
              padding: 0.6rem 0.3rem;
              color: #fff;
              font-size: 0.9rem;
              line-height: 1.2;
              text-align: right;
              white-space: normal;
            }
          }
        }
      }
    }
  }

  .slider-slide {
    .slide-img {
      height: 601px;
      background-position: center;
      background-size: cover;
    }

    .slide-body {
      position: absolute;
      bottom: 30%;
      left: unset;
      max-width: 600px;
      margin-left: 4rem;
      color: #fff;

      @media (max-width: 700px) {
        margin-left: 1rem;
